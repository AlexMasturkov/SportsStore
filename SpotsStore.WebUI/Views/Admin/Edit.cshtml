@model SportsStore.Domain.Entities.Product
@{
    ViewBag.Title = "Admin: Edit " + @Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h1>Edit @Model.Name</h1>
@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.EditorForModel()
    <div class="editor-label">Image</div>
    <div class="editor-field">
        @if (Model.ImageData == null)
        {
            @:None
        }
        else
        {
            <img width="150" height="150"
                 src="@Url.Action("GetImage", "Product", new { Model.ProductID })" />
        }
        @*<div>Upload new image: <input type="file" name="Image" /></div>*@
    </div>
    <div class="editor-label">Product Data File</div>
    <div class="editor-field">
        <div class="actionButtonsForDownload">
            @if (Model.ProductData == null)
            {
                @:None
            }
            else
            {
                @Html.ActionLink("Download: " + Model.ProductDataFileName, "GetFileForDownload", "Product", new { productId = Model.ProductID }, null)
            }
        </div>
    </div>

    <input id="ImageData" name="ImageData" type="hidden" value=@(Model.ImageData == null ? Html.Raw("\"\"") : Html.Raw(Convert.ToBase64String(Model.ImageData))) />
    <input id="ProductData" name="ProductData" type="hidden" value=@(Model.ProductData == null ? Html.Raw("\"\"") : Html.Raw(Convert.ToBase64String(Model.ProductData))) />


    <div class="editor-label">Upload new image </div>
    <div class="editor-field"><input type="file" name="Image" /></div>

    <div class="editor-label">Upload new Product Data File </div>
    <div class="editor-field"><input type="file" name="ProductDataFile" /></div>
    <input type="submit" value="Save" />
    @Html.ActionLink("Cancel and return to List", "Index")
}




